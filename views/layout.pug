doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
    link(rel='stylesheet', href='/stylesheets/sign.css')
    link(rel='stylesheet', href='/stylesheets/recipe.css')
    link(rel='stylesheet', href='/stylesheets/recipe_form.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
  body
    header
      nav 
        div
          a(href="/") 
            img(src="/images/logo.png", alt="A flower with Simply Recipes wriiten beside it" id="logo")
        div(id="signSearch")
          if currentUser 
            a(href="/logOut" style={"margin":"0 10px"}) Log Out
            form(action="/search", method="get") 
              input(type="search", name="search")
              button(type="submit")
                span(class="material-icons outlined") search
          else 
            a(href="/signUp") Sign Up
            a(href="/logIn" id="login") Login
    block content
    script(src="/javascripts/main.js") 